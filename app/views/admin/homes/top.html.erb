<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <h2 class="bg-light">注文履歴一覧</h2>
      <table>
        <tr>
          <th>注文日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <%# ここから繰り返し処理 %>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order) do %>
                <%= order.created_at.strftime('%Y/%m/%d/%T') %>
              <% end %>
            </td>
            <td><%= order.name %></td>
            <td><%#= order.order_quantity %></td>
            <td><%= Order.statuses_i18n[order.status] %></td>
          </tr>
        <% end %>
        <%# ここまで繰り返し処理%>
        <%#= paginate @orders %>
        <%# ページネーションの記述必要 %>
      </table>
      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      <%# このログアウトボタンは開発段階のもの。実装するときは忘れずに消すように！！ %>
    </div>
    <div class="col-2"></div>
  </div>
</div>