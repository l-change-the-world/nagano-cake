<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <h2 class="bg-light">注文履歴一覧</h2>
      <table>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <%# ここから繰り返し処理 %>
        <% @lists.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.member.name %></td>
            <td><%= order.order_items.quantity %></td>
            <td><%= order.status %></td>
            <%# ページネーションの記述必要 %>
          </tr>
        <% end %>
        <%# ここまで繰り返し処理%>
      </table>
    </div>
    <div class="col-2"></div>
  </div>
</div>