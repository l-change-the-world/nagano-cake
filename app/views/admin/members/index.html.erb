<div class="mt-4 mb-4">
  <div class="container">
    <div class="row">
      <div class="col">
        <h3 class="bg-light text-center col-5">会員一覧</h3>
      </div>
      <div class="col-8"></div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-9">
      <table class="table table-border">
        <tr class="bg-light">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <%# ここから繰り返し処理 %>
        <% @members.each do |member| %>
        <tr>
          <td class="border-bottom"><%= member.id %></td>
          <td class="border-bottom">
            <%= link_to admin_member_path(member), class: "text-dark" do %>
              <%= member.last_name %><%= member.first_name %>
            <% end %>
          </td>
          <td class="border-bottom"><%= member.email %></td>
            <% if member.is_deleted == false %>
              <td class="text-success font-weight-bold border-bottom"><%= member.boolean_label(member.is_deleted) %></td>
            <% else %>
              <td class="text-secondary font-weight-bold border-bottom"><%= member.boolean_label(member.is_deleted) %></td>
            <% end %>
        </tr>
        <% end %>

        <%# ここまで繰り返し処理%>
      </table>
      <div class="col"></div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-4"><%= paginate @members %></div>
    <div class="col"></div>
  </div>
</div>