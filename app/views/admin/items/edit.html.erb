<div class="mt-5">
  <div class="container">
    <div class="row">
      <div class="col-4">
        <h3 class="bg-light text-center col-8">商品編集</h3>
      </div>
      <div class="col-8"></div>
      <div class="col-3"></div>
      <div class="col-6">
        <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
          <table class="table table-borderless height="100"">
            <tr>
              <th><%= f.label :image, '商品画像' %></th>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
            <tr>
              <th><%= f.label :name, '商品名' %></th>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <th><%= f.label :description, '商品説明' %></th>
              <td><%= f.text_area :description %></td>
            </tr>
            <tr>
              <th><%= f.label :genre_id, 'ジャンル' %></th>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: '選択してください' } %></td>
            </tr>
            <tr>
              <th><%= f.label :price_excluding_tax, '税抜価格' %></th>
              <td><%= f.text_field :price_excluding_tax %>円</td>
            </tr>
            <tr>
              <th><%= f.label :is_for_sale, '販売ステータス' %></th>
              <td><%= f.radio_button :is_for_sale, true %>
                  <%= f.label :is_for_sale, '販売中', value: true %>
                  <%= f.radio_button :is_for_sale, false %>
                  <%= f.label :is_for_sale, '売切れ', value: false %>
              </td>
            </tr>
          </table>
          <div class="text-center col">
            <%= f.submit '変更を保存', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
      <div class="col-3"></div>
    </div>
  </div>
</div>