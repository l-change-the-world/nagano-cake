<div class="mt-5 mb-5">
  <div class="container">
    <div class="row">
      <div class="col">
        <h3 class="bg-light text-center col-10">ジャンル一覧・追加</h3>
      </div>
      <div class="col-8"></div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row　row-cols-2">
    <div class="col">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <p>
         <%= f.label :name, 'ジャンル名' %>
         <%= f.text_field :name %>
         <%= f.submit '新規登録', class: 'btn btn-success' %>
        </p>
      <% end %>
    </div>
    <div class="col"></div>
  </div>
</div>

<div class="container" >
  <div>
   <p>ジャンル</p>
   <table>
    <% @genres.each do |genre| %>
     <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
     </tr>
    <% end %>
   </table>
  </div>
</div>