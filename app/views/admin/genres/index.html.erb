<h2>ジャンル一覧・追加</h2>

 <div>
   <%= form_with model: @genre, url: admin_genres_path do |f| %>
     <p>
       <%= f.label :name, 'ジャンル名' %>
       <%= f.text_field :name %>
       <%= f.submit '新規登録', class: 'btn btn-success' %>
     </p>
   <% end %>
 </div>

<div>
 <p>ジャンル</p>
 <table>
  <% @genres.each do |genre| %>
   <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
   </tr>
  <% end %>
 </table>
</div>