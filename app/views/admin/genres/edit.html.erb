<h2>ジャンル編集</h2>

<%= form_with model: @genre, url: admin_genre_path do |f| %>
 <p>ジャンル名
  <%= f.text_field :name %>
  <%= f.submit '変更を保存', class: 'btn btn-success' %>
  <%= link_to "削除する", admin_genre_path(@genre), class: "btn btn-danger", method: :delete, data: { confirm: "本当に削除しますか？" } %>
 </p>
<% end %>