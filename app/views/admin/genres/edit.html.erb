<div class="mt-5 mb-5">
  <div class="container">
    <div class="row">
      <div class="col">
        <h3 class="bg-light text-center col-8">ジャンル編集</h3>
      </div>
      <div class="col-8"></div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row　row-cols-2">
    <div class="col">
      <%= form_with model: @genre, url: admin_genre_path do |f| %>
        <div class=>
          <%= f.label :name, 'ジャンル名' %>
          <%= f.text_field :name %>
          <%= f.submit '変更を保存', class: 'btn btn-success' %>
          <%= link_to "削除する", admin_genre_path(@genre), class: "btn btn-danger", method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </div>
      <% end %>
    </div>
    <div class ="col-1"></div>
  </div>
</div>