<div class"container">
  <div class="row">
    <div class="mt-3 pl-4">
      <h3>配送先編集</h3>
    </div>
  </div>
  <div class="row">
    <%= form_with model: @shipping__address do |f| %>
      <div class="form-group row">
        <div class="col-md-5 pl-5">郵便番号(ハイフンなし)</div>
        <div class="col-md-3">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-5 pl-5">住所</div>
        <div class="col-md-3">
          <%= f.text_field :shipping_address_address, :size=>"60",autocomplete: "address" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-5 pl-5">宛名</div>
        <div class="col-md-3">
          <%= f.text_field :shipping_address_name,autocomplete: "name" %>
          <div class="mt-3">
            <%= f.submit "変更内容を保存", class: "btn btn-success" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>