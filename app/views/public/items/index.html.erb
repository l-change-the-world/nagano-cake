<div class="container">
  <div class="row mt-5">
    <div class="col-lg-4">
      <table class="table table-bordered border-dark w-75 h-75">
        <tr><th class="text-center border-dark">ジャンル検索</th></tr>
        <% @genres.each do |genre| %>
         <tr>
          <td class="border-0"><%= genre.name %></td>
         </tr>
        <% end %>
      </table>
    </div>
    <div class="col-lg-8">
      <div class="d-flex">
        <div>
          <h2>商品一覧</h2>
        </div>
        <span class="mt-3 ml-1">(全<%= @items.count %>件）</span>
      </div>
      <div class="d-flex flex-wrap mt-3 mb-3">
        <% @items.each do |item| %>
          <div class="mr-5 mb-3">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image, size: "100x100" %><br>
            <% end %>
            <%= item.name %><br>
            ¥<%= item.price_excluding_tax %>
          </div>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>
