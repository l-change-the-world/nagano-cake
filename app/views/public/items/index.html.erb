<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <table border="1" width="200" height="200">
        <tr align="center">
          <th>ジャンル検索</th>
        </tr>
        <tr>
          <td>ケーキ</td>
        </tr>
        <tr>
          <td>焼き菓子</td>
        </tr>
        <tr>
          <td>プリン</td>
        </tr>
        <tr>
          <td>キャンディ</td>
        </tr>
      </table>
    </div>
    <div class="col-lg-8">
      <h2>商品一覧</h2>
      <span>(全<%= @items.count %>件）</span>
      <% @items.each do |item| %>
      <table>
        <tr>
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_image, size: "100x100" %>
          <% end %>
          <span><%= item.name %></span>
          <span>¥<%= item.price_excluding_tax %></span>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
      <%= paginate @items %>