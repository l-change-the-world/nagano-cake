<div class="mt-5 ml-5">
  <span style="background-color: #C0C0C0;">新規会員登録</span>
</div>
<%= form_with model: @member, url: member_registration_path, id: 'new_member', class: 'new_member' do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table class="ml-5">
　<tr>
　  <th>名前</th>
　  <td><%= f.label :（姓） %></td>
    <td><%= f.text_field :last_name %></td>
    <td><%= f.label :（名） %></td>
    <td><%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
　  <td><%= f.label :（セイ） %></td>
    <td><%= f.text_field :last_name_ruby %></td>
    <td><%= f.label :（メイ） %></td>
    <td><%= f.text_field :first_name_ruby %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </tr>
  <tr>
    <th>郵便番号（ハイフンなし）</th>
    <td></td>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td></td>
    <td colspan="3"><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th>電話番号（ハイフンなし）</th>
    <td></td>
    <td><%= f.telephone_field :telephone_number %></td>
  </tr>
  <tr>
    <th>
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
    </th>
    <td></td>
    <td>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </td>
  </tr>
  <tr>
    <th><%= f.label :パスワード（確認用） %><br /></th>
    <td></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>
  <tr>
    <th></th>
    <td></td>
    <td class="pt-4"><%= f.submit "新規登録", class: 'btn btn-success col-10' %></td>
  </tr>
  </table>
<% end %>

<div class="mt-5 ml-5">
  <span style="background-color: #C0C0C0;">既に登録済みの方</span><br>
  <%= link_to "こちら", new_member_session_path %>からログインしてください。
</div>
