<div class="container">
  <div class="row">

    <div class="mt-3">
      <h3>注文情報入力</h3>
    </div>
    </div>
    <div class="row">
      <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
        <div class="mt-2">
          <div>
            <h5><strong>支払い方法</strong></h5>
          </div>
        <div class="ml-4">
          <%= f.radio_button :payment_method, "credit_card" %>
          <%= f.label :payment_method_credit_card, "クレジットカード" %><br>
          <%= f.radio_button :payment_method, "transfer" %>
          <%= f.label :payment_method_transfer, "銀行振込" %><br>
        </div>
      </div>

      <div class="mt-3">
        <h5><strong>お届け先</strong></h5>
        <div class="ml-4">
       <!--顧客の住所-->
          <%= f.radio_button :address_select, "customer_address" %>
          <%= f.label :address_select, "ご自身の住所" %><br>
          <%= current_customer.address %><br>
          <%= current_customer.last_name %>
          <%= current_customer.first_name %><br>
        </div>
        <div class="mt-2 ml-2">
     　<!--登録済みの配送先住所-->
          <%= f.radio_button :address_select, "address" %>
          <%= f.label :address_select, "登録済住所から選択" %><br>
        <div class="ml-5">
       <!--セレクトボックスですべての住所表示-->
          <%= f.select :address_id, options_from_collection_for_select(SippingAddress.all, :id, :address_display) %><br>
        </div>
      </div>
      <div class="mt-3 ml-4">
      <!--新規配送先-->
        <%= f.radio_button :address_select, "new_shipping_address" %>
        <%= f.label :address_select, "新しいお届け先" %><br>
      </div>
    　<!--新規配送先入力フォーム-->
      <div class="ml-5">
        <div class="form-group row">
          <div class="col-md-5">郵便番号(ハイフンなし)</div>
          <div class="col-md-3">
            <%= f.text_field :postal_code, placeholder: "" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-5">住所</div>
          <div class="col-md-3">
            <%= f.text_field :address, :size=>"60", placeholder: "TOKYO" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-5">宛名</div>
          <div class="col-md-3">
            <%= f.text_field :name, placeholder: "宛名" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="text-center mt-4 mb-5">
  <!--注文情報確認画面へ-->
    <%= f.submit "確認画面へ進む", class: "btn btn-primary"%>
  </div>
    <% end %>
</div>