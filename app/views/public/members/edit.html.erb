<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-8">
      <h2 class="bg-light">
        <%= @member.last_name %><%= @member.first_name %>さんの会員詳細
      </h2>
      <table>
        <tr>
          <th>会員ID</th>
          <td><%= @member.id %></td>
        </tr>
        <%= form_with model:@member, url:members_information_path(current_member),method: :patch do |f| %>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :last_name_ruby %></td>
            <td><%= f.text_field :first_name_ruby %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td><%= f.submit "変更を保存する", class: 'btn btn-success' %></td>
            <td><div></div></td>
          <td><%= link_to "退会する", members_quit_path, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-3"></div>
  </div>
</div>