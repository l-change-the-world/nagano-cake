<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-8">
      <h2 class="bg-light"><%= @member.last_name %><%= @member.first_name %>さんの会員詳細</h2>
      <table>
        <tr>
          <th>会員ID</th>
          <td><%= @member.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @member.last_name %><%= @member.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @member.last_name_ruby %><%= @member.first_name_ruby %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @member.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @member.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @member.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @member.email %></td>
        </tr>
        <tr>
          <td><%= link_to '編集する', members_information_edit_path, class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "配送先一覧を見る", shipping_addresses_path, class: 'btn btn-sm btn-info' %></td>
          <td></td>
          <td><%= link_to '注文履歴一覧を見る', orders_path, class: "btn btn-sm btn-info" %></td>
        </tr>
      </table>
    </div>
    <div class="col-3"></div>
  </div>
</div>